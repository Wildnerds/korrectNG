{
  "expo": {
    "name": "KorrectNG",
    "slug": "korrectng",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "korrectng",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#008751"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.korrectng.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "We need access to your photo library to upload gallery images.",
        "NSCameraUsageDescription": "We need access to your camera to take photos for your gallery."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#008751"
      },
      "package": "com.korrectng.app",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "We need access to your photos to upload gallery images.",
          "cameraPermission": "We need access to your camera to take photos for your gallery."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
