# Production Environment Variables
# Copy this file to .env and fill in the values

# ─── General ───────────────────────────────────────────────────────────────────
NODE_ENV=production
IMAGE_TAG=latest

# ─── Security ──────────────────────────────────────────────────────────────────
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars

# ─── CORS ──────────────────────────────────────────────────────────────────────
ALLOWED_ORIGINS=https://korrect.ng,https://www.korrect.ng,https://app.korrect.ng

# ─── MongoDB (Use MongoDB Atlas or separate instances for each service) ────────
MONGODB_URI_USERS=mongodb+srv://user:password@cluster.mongodb.net/korrect_users?retryWrites=true&w=majority
MONGODB_URI_ARTISANS=mongodb+srv://user:password@cluster.mongodb.net/korrect_artisans?retryWrites=true&w=majority
MONGODB_URI_TRANSACTIONS=mongodb+srv://user:password@cluster.mongodb.net/korrect_transactions?retryWrites=true&w=majority
MONGODB_URI_MESSAGING=mongodb+srv://user:password@cluster.mongodb.net/korrect_messaging?retryWrites=true&w=majority
MONGODB_URI_PLATFORM=mongodb+srv://user:password@cluster.mongodb.net/korrect_platform?retryWrites=true&w=majority

# ─── Redis ─────────────────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379

# ─── Email (SMTP) ──────────────────────────────────────────────────────────────
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SMTP_FROM=Korrect <noreply@korrect.ng>

# ─── Paystack ──────────────────────────────────────────────────────────────────
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key

# ─── Cloudinary ────────────────────────────────────────────────────────────────
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ─── Termii (SMS) ──────────────────────────────────────────────────────────────
TERMII_API_KEY=your-termii-api-key
TERMII_SENDER_ID=Korrect

# ─── Groq AI (Document Verification) ───────────────────────────────────────────
GROQ_API_KEY=your-groq-api-key

# ─── Sentry (Error Tracking) ───────────────────────────────────────────────────
SENTRY_DSN=https://xxxx@xxx.ingest.sentry.io/xxxxx

# ─── Monitoring (Optional) ─────────────────────────────────────────────────────
PROMETHEUS_ENABLED=true
